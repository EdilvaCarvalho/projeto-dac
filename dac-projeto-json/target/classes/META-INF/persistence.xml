    <class>br.edu.ifpb.dac.projeto.json.entidades.Sala</class>
    <class>br.edu.ifpb.dac.projeto.json.entidades.Semestre</class>
    <class>br.edu.ifpb.dac.projeto.json.entidades.Turma</class>
    <class>br.edu.ifpb.dac.projeto.json.infra.ConvertLocalTime</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://bancohost:5432/dac-projeto"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="postgres"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
