  <persistence-unit name="dac-projeto-PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>br.edu.ifpb.dac.projeto.json.entidades.Professor</class>
    <class>br.edu.ifpb.dac.projeto.json.entidades.Aula</class>
    <class>br.edu.ifpb.dac.projeto.json.entidades.Curso</class>
